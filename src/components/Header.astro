---
import Image from 'astro/components/Image.astro';
import Logo from '../../public/android.webp';

const randomPersonaje = Math.floor(Math.random() * 50)%50;
const baseURL = import.meta.env.BASE_URL;

---

<header class="w-full">
<nav class="bg-white border-gray-200 dark:bg-gray-900">
    <div class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4">
    <a href={`${baseURL}`} class="flex items-center space-x-3 rtl:space-x-reverse">
        <Image src={Logo} class="h-20 w-20" alt="Bola del drac" />
        <span class="self-center text-2xl font-semibold whitespace-nowrap dark:text-white">Bola del drac</span>
    </a>
      <div class="items-center justify-between hidden w-full md:flex md:w-auto md:order-1" id="navbar-search">

        <ul class="flex flex-col p-4 md:p-0 mt-4 font-medium border border-gray-100 rounded-lg bg-gray-50 md:space-x-8 rtl:space-x-reverse md:flex-row md:mt-0 md:border-0 md:bg-white dark:bg-gray-800 md:dark:bg-gray-900 dark:border-gray-700">
          <li>
            <a href="/" class="block py-2 px-3 text-gray-900 rounded-sm hover:bg-gray-100 md:hover:bg-transparent md:hover:text-amber-700 md:p-0 md:dark:amber:text-blue-500 dark:text-white dark:hover:bg-gray-700 dark:hover:text-white md:dark:hover:bg-transparent dark:border-gray-700" aria-current="page">Home</a>
          </li>
          <li>
            <a href={`/personaje/${randomPersonaje}`} class="block py-2 px-3 text-gray-900 rounded-sm hover:bg-gray-100 md:hover:bg-transparent md:hover:text-amber-700 md:p-0 md:dark:amber:text-blue-500 dark:text-white dark:hover:bg-gray-700 dark:hover:text-white md:dark:hover:bg-transparent dark:border-gray-700">Personaje Aleatorio</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>
  
</header>
